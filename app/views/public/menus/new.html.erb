<%= form_with model: @menu, local: true do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-6 mb-4">
      <!--レシピ-->
      <div class="form">
        <div class="form-group">
          <div class="form-title">
            <h4>レシピ名</h4>
          </div>
          <%= f.text_field :name, placeholder: "例:test", class: "recipe-name-form" %>
        </div>
        <div class="form-group">
          <div class="form-title">
            <h4>レシピ紹介</h4>
            <div class="font-count">　※200字以内</div>
          </div>
          <%= f.text_area :introduction, placeholder: "例:簡単お手軽！材料は○人前です。", class: "recipe-info-form" %>
        </div>
      </div>
    </div>
    <div class="form">
        <h4>材料</h4>
        <div class="field">
          <%= f.fields_for :ingredients do |ingredient| %>
            <%= render "ingredient_fields", f: ingredient %>
          <% end %>
        </div>
        <div class="links">
          <%= link_to_add_association "材料追加", f, :ingredients,
              class: "btn btn-primary" %>
          <p class="links-message">※不要な入力フォームは削除してください。</p>
        </div><br>
      </div><br>
      <div class="form-title">
          <h4>作り方</h4>
        </div>
        <div class="field">
          <%= f.fields_for :steps do |step| %>
            <%= render "step_fields", f: step %>
          <% end %>
        </div>
        <div class="links">
          <%= link_to_add_association "作り方追加", f, :steps,
              class: "btn btn-primary" %>
          <p class="links-message">※不要な入力フォームは削除してください。</p>
        </div><br>

<div class="form-btn">
          <%= f.submit '投稿', class:"btn btn-success" %>
        </div>
  </div>
<% end %>