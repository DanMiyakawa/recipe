<div class="container">
  <h2 class="text-center mt-4"><strong>〜ジャンル編集〜</strong></h2>
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
      <%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
        <p class="text-center mt-5">ジャンル名
          <%= f.text_field :name, class: "mx-2" %>
          <%= f.submit '変更を保存', class: "btn btn-success mx-2" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
